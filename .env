# ========================================
# CRASH WORM 3D SERVER - CONFIGURACIÓN DE ENTORNO
# Variables de entorno para desarrollo y producción
# ========================================

# ========================================
# CONFIGURACIÓN BÁSICA DEL SERVIDOR
# ========================================
NODE_ENV=development
SERVER_PORT=8080
WEBSOCKET_PORT=8081
HOST=localhost

# ========================================
# CONFIGURACIÓN DE SEGURIDAD
# ========================================

# Clave secreta para JWT (CAMBIAR EN PRODUCCIÓN)
JWT_SECRET=tu_clave_secreta_super_segura_aqui_cambiar_en_produccion

# Clave para encriptación de sesiones
SESSION_SECRET=otra_clave_secreta_para_sesiones_cambiar_en_produccion

# Configuración de CORS
CORS_ORIGIN=http://localhost:3000,http://127.0.0.1:3000

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=1000
RATE_LIMIT_GAME_MAX=10000

# Anti-cheat configuración
ANTICHEAT_ENABLED=true
ANTICHEAT_MAX_SPEED=100
ANTICHEAT_MAX_POSITION_JUMP=500
ANTICHEAT_VIOLATION_THRESHOLD=5

# ========================================
# CONFIGURACIÓN DE BASE DE DATOS (OPCIONAL)
# ========================================

# MongoDB
MONGODB_URI=mongodb://localhost:27017/crashworm3d
MONGODB_MAX_CONNECTIONS=10

# Redis para cache y sesiones
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# ========================================
# CONFIGURACIÓN DE LOGS
# ========================================

# Nivel de logging (error, warn, info, debug)
LOG_LEVEL=debug

# Directorio de logs
LOG_DIR=./logs

# Rotación de logs
LOG_MAX_SIZE=20m
LOG_MAX_FILES=14d

# Logs en consola
LOG_CONSOLE=true

# ========================================
# CONFIGURACIÓN DEL JUEGO
# ========================================

# Límites de salas
MAX_ROOMS=1000
DEFAULT_MAX_PLAYERS=8
ROOM_TIMEOUT_MS=1800000

# Configuración de juego
GAME_GRAVITY=-9.81
GAME_MAX_SPEED=50
GAME_JUMP_HEIGHT=10
COLLECTIBLE_RESPAWN_TIME=30000
ENEMY_SPAWN_RATE=1.5
POWERUP_DURATION=15000

# ========================================
# CONFIGURACIÓN DE MONITOREO
# ========================================

# Métricas y analíticas
ANALYTICS_ENABLED=true
METRICS_ENDPOINT=/api/metrics
METRICS_FLUSH_INTERVAL=30000

# Health checks
HEALTH_CHECK_INTERVAL=60000
HEALTH_CHECK_TIMEOUT=5000

# ========================================
# CONFIGURACIÓN DE NOTIFICACIONES
# ========================================

# Discord webhook para alertas (opcional)
DISCORD_WEBHOOK_URL=

# Email para alertas críticas (opcional)
ALERT_EMAIL=admin@crashworm3d.com
SMTP_HOST=
SMTP_PORT=587
SMTP_USER=
SMTP_PASS=

# ========================================
# CONFIGURACIÓN DE DEPLOYMENT
# ========================================

# Docker
DOCKER_IMAGE=crash-worm-server
DOCKER_TAG=latest

# Kubernetes
K8S_NAMESPACE=crashworm3d
K8S_REPLICAS=3

# CDN y Assets
CDN_URL=https://cdn.crashworm3d.com
ASSETS_VERSION=1.0.0

# ========================================
# CONFIGURACIÓN DE DESARROLLO
# ========================================

# Debug mode
DEBUG_MODE=true
DEBUG_WEBSOCKET=false
DEBUG_ANTICHEAT=true

# Hot reload
NODEMON_ENABLED=true
NODEMON_WATCH_EXTENSIONS=js,json

# Testing
TEST_MODE=false
TEST_DISABLE_SECURITY=false

# ========================================
# CONFIGURACIÓN DE PRODUCCIÓN
# ========================================

# SSL/TLS
SSL_ENABLED=false
SSL_CERT_PATH=
SSL_KEY_PATH=

# Clustering
CLUSTER_ENABLED=false
CLUSTER_WORKERS=auto

# Performance
COMPRESSION_ENABLED=true
GZIP_LEVEL=6

# Memory limits
MAX_MEMORY_MB=512
MEMORY_CHECK_INTERVAL=60000

# ========================================
# CONFIGURACIÓN DE TERCEROS
# ========================================

# Google Analytics (opcional)
GA_TRACKING_ID=

# Sentry para error tracking (opcional)
SENTRY_DSN=

# AWS S3 para almacenamiento (opcional)
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_REGION=us-east-1
AWS_S3_BUCKET=crashworm3d-data

# ========================================
# CONFIGURACIÓN DE API EXTERNA
# ========================================

# API de autenticación externa (opcional)
EXTERNAL_AUTH_URL=
EXTERNAL_AUTH_TOKEN=

# API de estadísticas de juego (opcional)
GAME_STATS_API_URL=
GAME_STATS_API_KEY=

# ========================================
# NOTAS IMPORTANTES
# ========================================

# 1. CAMBIAR TODAS LAS CLAVES SECRETAS EN PRODUCCIÓN
# 2. Configurar CORS_ORIGIN con los dominios correctos
# 3. Habilitar SSL en producción
# 4. Configurar base de datos y cache en producción
# 5. Configurar monitoreo y alertas
# 6. Ajustar límites según la capacidad del servidor