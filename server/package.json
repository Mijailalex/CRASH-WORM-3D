{
  "name": "crash-worm-3d-server",
  "version": "1.0.0",
  "description": "Servidor multiplayer seguro para Crash Worm 3D Adventure con protecciÃ³n anti-hacking",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon server.js",
    "test": "jest --coverage",
    "test:watch": "jest --watch",
    "test:security": "npm audit && npm run test",
    "lint": "eslint *.js",
    "lint:fix": "eslint *.js --fix",
    "security-check": "npm audit --audit-level moderate",
    "performance-test": "node performance-test.js",
    "docker:build": "docker build -t crash-worm-server .",
    "docker:run": "docker run -p 8080:8080 -p 8081:8081 crash-worm-server"
  },
  "keywords": [
    "websocket",
    "multiplayer",
    "game-server",
    "security",
    "anti-cheat",
    "express",
    "real-time"
  ],
  "author": "Crash Worm 3D Team",
  "license": "MIT",
  "dependencies": {
    "express": "^4.18.2",
    "ws": "^8.14.2",
    "cors": "^2.8.5",
    "express-rate-limit": "^7.1.5",
    "helmet": "^7.1.0",
    "compression": "^1.7.4",
    "express-validator": "^7.0.1",
    "bcryptjs": "^2.4.3",
    "jsonwebtoken": "^9.0.2",
    "dotenv": "^16.3.1",
    "winston": "^3.11.0",
    "morgan": "^1.10.0",
    "uuid": "^9.0.1",
    "lodash": "^4.17.21",
    "redis": "^4.6.10",
    "mongoose": "^8.0.3",
    "socket.io": "^4.7.5"
  },
  "devDependencies": {
    "nodemon": "^3.0.2",
    "jest": "^29.7.0",
    "supertest": "^6.3.3",
    "eslint": "^8.55.0",
    "eslint-config-node": "^4.1.0",
    "eslint-plugin-security": "^1.7.1",
    "prettier": "^3.1.1",
    "@types/node": "^20.10.5",
    "artillery": "^2.0.3",
    "clinic": "^12.0.0"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/crash-worm-3d/server.git"
  },
  "bugs": {
    "url": "https://github.com/crash-worm-3d/server/issues"
  },
  "homepage": "https://github.com/crash-worm-3d/server#readme",
  "os": [
    "linux",
    "darwin",
    "win32"
  ],
  "cpu": [
    "x64",
    "arm64"
  ],
  "funding": {
    "type": "individual",
    "url": "https://github.com/sponsors/crash-worm-3d"
  },
  "volta": {
    "node": "20.10.0",
    "npm": "10.2.3"
  },
  "jest": {
    "testEnvironment": "node",
    "coverageDirectory": "coverage",
    "collectCoverageFrom": [
      "*.js",
      "!node_modules/**",
      "!coverage/**",
      "!jest.config.js"
    ],
    "testMatch": [
      "**/__tests__/**/*.js",
      "**/?(*.)+(spec|test).js"
    ],
    "verbose": true
  },
  "eslintConfig": {
    "env": {
      "node": true,
      "es2022": true,
      "jest": true
    },
    "extends": [
      "eslint:recommended",
      "plugin:security/recommended"
    ],
    "plugins": [
      "security"
    ],
    "parserOptions": {
      "ecmaVersion": 2022,
      "sourceType": "module"
    },
    "rules": {
      "no-console": "off",
      "no-unused-vars": "error",
      "security/detect-object-injection": "error",
      "security/detect-non-literal-fs-filename": "error",
      "security/detect-eval-with-expression": "error"
    }
  },
  "prettier": {
    "semi": true,
    "trailingComma": "es5",
    "singleQuote": true,
    "printWidth": 80,
    "tabWidth": 2
  }
}