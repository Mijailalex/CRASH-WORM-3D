{
  "//": "============================================================================",
  "//": "üìò CRASH WORM 3D - TYPESCRIPT CONFIGURATION",
  "//": "============================================================================",
  "//": "Ubicaci√≥n: tsconfig.json",
  "//": "Configuraci√≥n optimizada de TypeScript para React + Three.js + Game Dev",

  "compilerOptions": {
    "//": "========================================",
    "//": "üèóÔ∏è CONFIGURACI√ìN DE COMPILACI√ìN",
    "//": "========================================",
    
    "target": "ES2022",
    "lib": [
      "ES2023",
      "DOM",
      "DOM.Iterable",
      "WebWorker"
    ],
    "module": "ESNext",
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "useDefineForClassFields": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,

    "//": "========================================",
    "//": "‚öõÔ∏è CONFIGURACI√ìN REACT/JSX",
    "//": "========================================",
    
    "jsx": "react-jsx",
    "jsxFactory": "React.createElement",
    "jsxFragmentFactory": "React.Fragment",
    "jsxImportSource": "react",

    "//": "========================================",
    "//": "üìÅ RESOLUCI√ìN DE PATHS",
    "//": "========================================",
    
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"],
      "@/components/*": ["src/components/*"],
      "@/core/*": ["src/core/*"],
      "@/hooks/*": ["src/hooks/*"],
      "@/utils/*": ["src/utils/*"],
      "@/styles/*": ["src/styles/*"],
      "@/data/*": ["src/data/*"],
      "@/context/*": ["src/context/*"],
      "@/types/*": ["src/types/*"],
      "@/assets/*": ["src/assets/*"]
    },

    "//": "========================================",
    "//": "üîç CONFIGURACI√ìN DE TIPOS",
    "//": "========================================",
    
    "strict": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "strictFunctionTypes": true,
    "strictBindCallApply": true,
    "strictPropertyInitialization": true,
    "noImplicitThis": true,
    "alwaysStrict": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "noUncheckedIndexedAccess": false,
    "noImplicitOverride": true,
    "exactOptionalPropertyTypes": false,

    "//": "========================================",
    "//": "‚ö†Ô∏è CONFIGURACI√ìN DE ERRORES Y WARNINGS",
    "//": "========================================",
    
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noPropertyAccessFromIndexSignature": false,
    "allowUnusedLabels": false,
    "allowUnreachableCode": false,

    "//": "========================================",
    "//": "üéÆ CONFIGURACI√ìN ESPEC√çFICA PARA GAME DEV",
    "//": "========================================",
    
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "skipLibCheck": true,
    "declaration": false,
    "declarationMap": false,
    "sourceMap": true,
    "removeComments": false,
    "importHelpers": true,

    "//": "========================================",
    "//": "üìä CONFIGURACI√ìN DE SALIDA",
    "//": "========================================",
    
    "outDir": "./dist",
    "rootDir": "./src",
    "incremental": true,
    "tsBuildInfoFile": "./node_modules/.cache/typescript/tsbuildinfo",

    "//": "========================================",
    "//": "üîß CONFIGURACIONES AVANZADAS",
    "//": "========================================",
    
    "downlevelIteration": true,
    "preserveConstEnums": false,
    "suppressExcessPropertyErrors": false,
    "suppressImplicitAnyIndexErrors": false,
    "newLine": "lf",
    "stripInternal": true,

    "//": "========================================",
    "//": "üìö TIPOS GLOBALES",
    "//": "========================================",
    
    "types": [
      "vite/client",
      "node",
      "jest",
      "@testing-library/jest-dom",
      "three",
      "cannon"
    ],
    "typeRoots": [
      "./node_modules/@types",
      "./src/types"
    ]
  },

  "//": "========================================",
  "//": "üìÅ ARCHIVOS INCLUIDOS/EXCLUIDOS",
  "//": "========================================",
  
  "include": [
    "src/**/*",
    "src/**/*.ts",
    "src/**/*.tsx",
    "src/**/*.js",
    "src/**/*.jsx",
    "src/**/*.vue",
    "tests/**/*",
    "vite.config.ts",
    "vitest.config.ts",
    "playwright.config.ts"
  ],
  
  "exclude": [
    "node_modules",
    "dist",
    "build",
    ".vite",
    "coverage",
    "public",
    "server/node_modules",
    "**/*.test.js",
    "**/*.spec.js",
    "**/*.stories.*",
    "storybook-static",
    "docs",
    ".github",
    "scripts"
  ],

  "//": "========================================",
  "//": "üîß CONFIGURACIONES DE REFERENCIA",
  "//": "========================================",
  
  "references": [
    {
      "path": "./src"
    }
  ],

  "//": "========================================",
  "//": "‚öôÔ∏è CONFIGURACIONES ESPEC√çFICAS",
  "//": "========================================",
  
  "watchOptions": {
    "watchFile": "useFsEvents",
    "watchDirectory": "useFsEvents",
    "fallbackPolling": "dynamicPriority",
    "synchronousWatchDirectory": true,
    "excludeDirectories": [
      "**/node_modules",
      "**/dist",
      "**/build"
    ]
  },

  "compileOnSave": false,
  
  "//": "========================================",
  "//": "üìã CONFIGURACIONES HEREDADAS",
  "//": "========================================",
  
  "extends": []
}