{
  "compilerOptions": {
    // ========================================
    // üéØ TARGET Y M√ìDULOS
    // ========================================
    "target": "ES2020",
    "lib": [
      "ES2020",
      "DOM",
      "DOM.Iterable",
      "WebWorker"
    ],
    "module": "ESNext",
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,

    // ========================================
    // üìÅ PATH MAPPING
    // ========================================
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"],
      "@components/*": ["src/components/*"],
      "@core/*": ["src/core/*"],
      "@hooks/*": ["src/hooks/*"],
      "@utils/*": ["src/utils/*"],
      "@styles/*": ["src/styles/*"],
      "@data/*": ["src/data/*"],
      "@context/*": ["src/context/*"],
      "@types/*": ["src/types/*"],
      "@assets/*": ["src/assets/*"],
      "@public/*": ["public/*"]
    },

    // ========================================
    // üîß COMPILACI√ìN
    // ========================================
    "useDefineForClassFields": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": false,
    "forceConsistentCasingInFileNames": true,
    "verbatimModuleSyntax": true,

    // ========================================
    // üéÆ JSX CONFIGURATION
    // ========================================
    "jsx": "react-jsx",
    "jsxImportSource": "react",

    // ========================================
    // üìä TYPE CHECKING
    // ========================================
    "strict": true,
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "noFallthroughCasesInSwitch": true,
    "exactOptionalPropertyTypes": false,
    "noImplicitReturns": true,
    "noImplicitOverride": true,
    "noImplicitAny": false,
    "strictNullChecks": true,
    "strictFunctionTypes": true,
    "strictBindCallApply": true,
    "strictPropertyInitialization": false,
    "noImplicitThis": true,
    "alwaysStrict": true,

    // ========================================
    // üîç ADDITIONAL CHECKS
    // ========================================
    "noUncheckedIndexedAccess": false,
    "noImplicitReturns": true,
    "allowUnreachableCode": false,
    "allowUnusedLabels": false,

    // ========================================
    // üõ°Ô∏è ERROR REPORTING
    // ========================================
    "skipDefaultLibCheck": false,
    "skipLibCheck": true,

    // ========================================
    // üé® EMIT
    // ========================================
    "declaration": false,
    "declarationMap": false,
    "sourceMap": true,
    "outDir": "./dist",
    "removeComments": false,
    "importHelpers": true,
    "downlevelIteration": true,

    // ========================================
    // üîß INTEROP CONSTRAINTS
    // ========================================
    "isolatedModules": true,
    "allowJs": true,
    "checkJs": false,
    "maxNodeModuleJsDepth": 1,

    // ========================================
    // üéØ ADVANCED
    // ========================================
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "incremental": true,
    "tsBuildInfoFile": "./node_modules/.cache/tsbuildinfo.json"
  },

  // ========================================
  // üìÅ INCLUDE/EXCLUDE
  // ========================================
  "include": [
    "src/**/*",
    "src/**/*.tsx",
    "src/**/*.ts",
    "src/**/*.jsx",
    "src/**/*.js",
    "tests/**/*",
    "vite.config.ts",
    "vitest.config.ts",
    "**/*.d.ts"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "build",
    "coverage",
    "**/*.spec.ts",
    "**/*.test.ts",
    "**/*.spec.tsx",
    "**/*.test.tsx",
    "server/node_modules",
    "server/dist",
    "docs",
    "public"
  ],

  // ========================================
  // üîó REFERENCES
  // ========================================
  "references": [
    {
      "path": "./tsconfig.node.json"
    }
  ],

  // ========================================
  // üß™ TESTING
  // ========================================
  "ts-node": {
    "esm": true,
    "compilerOptions": {
      "module": "ESNext",
      "moduleResolution": "node"
    }
  },

  // ========================================
  // üéÆ GAME-SPECIFIC TYPE DEFINITIONS
  // ========================================
  "typeAcquisition": {
    "enable": true,
    "include": [
      "three",
      "tone",
      "howler"
    ]
  }
}
